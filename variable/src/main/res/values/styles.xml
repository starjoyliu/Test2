<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme_right_in_right_out">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="DialogTheme_left_in_left_out">
        <item name="android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="DialogTheme_bottom_in_bottom_out">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="DialogTheme_top_in_top_out">
        <item name="android:windowEnterAnimation">@anim/slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_top_out</item>
    </style>

    <style name="DialogTheme_fade_in_fade_out">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MATCH_DIALOG" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>